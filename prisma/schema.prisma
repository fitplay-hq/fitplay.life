generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  employeeId String   @id @default(uuid())
  name       String
  email      String   @unique
  phone      String   @unique
  gender     Gender
  birthDate  DateTime
  company    Company  @relation(fields: [companyId], references: [id])
  companyId  String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Company {
  id        String   @id @default(uuid())
  name      String
  address   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  users     User[]
  hr        HR[]
}

model HR {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  phone     String   @unique
  company   Company  @relation(fields: [companyId], references: [id])
  companyId String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Gender {
  MALE
  FEMALE
  OTHER
}
